             <sym value="przymiotnik"/>
             <sym value="liczebnik"/>
             <sym value="zaimek"/>
             <sym value="przysłówek"/>
             <sym value="przyimek"/>
             <sym value="spójnik"/>
             <sym value="wykrzyknik"/>
             <sym value="partykuła"/>
          </vAlt>
       </vRange>

       <vDefault>
          <none/>
       </vDefault>
    </fDecl>


